<controls:LightWindowBase
    x:Class="Noone.UI.Controls.MessageBoxWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:Noone.UI.Controls"
    xmlns:models="clr-namespace:Noone.UI.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Content.Settings.Title}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Width="{Binding Content.Settings.Width}"
    Height="{Binding Content.Settings.Height}"
    IsFixedPosition="True"
    BorderThickness="1"
    BorderBrush="{DynamicResource DarkBackgroundBrush1}"
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar = "False"
    SystemButtons="{x:Static models:SystemButtons.Close}"
    mc:Ignorable="d">
  <ContentControl Content="{Binding Content}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
</controls:LightWindowBase>
