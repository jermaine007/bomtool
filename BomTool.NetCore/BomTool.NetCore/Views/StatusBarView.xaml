<fx:LightUserControlBase
    x:Class="BomTool.NetCore.Views.StatusBarView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fx="clr-namespace:NooneUI.Framework;assembly=NooneUI"
    xmlns:local="clr-namespace:BomTool.NetCore.Views;assembly=BomTool.NetCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Height="24" ColumnDefinitions="*,*">
      <TextBlock Margin="8 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Message}" />
      <ProgressBar Grid.Column="1" HorizontalAlignment="Right" IsIndeterminate="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Margin="4" />
    </Grid>
</fx:LightUserControlBase>
