<fx:LightUserControlBase
    x:Class="BomTool.NetCore.Views.MenuView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fx="clr-namespace:NooneUI.Framework;assembly=NooneUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Panel>
        <Menu Name="MainMenu">
            <MenuItem Header="File">
                <Button
                    Classes="subItem"
                    Command="{Binding OpenFileCommand}"
                    Content="Open"
                    Width="105" />
                <Button
                    Classes="subItem"
                    Command="{Binding ExitCommand}"
                    Content="Generate Bom"
                    Width="105" />
                <Button
                    Classes="subItem"
                    Command="{Binding ExitCommand}"
                    Content="Generate Pdf"
                    Width="105" />
            </MenuItem>
            <MenuItem Header="Help">
                 <Button
                    Classes="subItem"
                    Command="{Binding ExitCommand}"
                    Content="About"
                    Width="60" />
            </MenuItem>
        </Menu>
    </Panel>
</fx:LightUserControlBase>
